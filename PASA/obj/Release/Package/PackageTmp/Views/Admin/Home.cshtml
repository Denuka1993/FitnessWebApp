@using PASA.Domain
@model List<Student>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Home";
    int i = 0;
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="header">
                <h4 class="title">Student Registration List</h4>
            </div>
            <div class="content table-responsive table-full-width">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>First Name</th>
                            <th>Activity Group</th>
                            <th>DOB</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Student oStudent in Model)
                        {
                            i++;
                            <tr>
                                <td>@i</td>
                                <td>@oStudent.FullName</td>
                                <td>@oStudent.ActivityGroup</td>
                                <td>@oStudent.DOB.ToShortDateString()</td>
                                <td><a href="@Url.Content("~/Admin/ViewMore/")@oStudent.Id">View More</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

